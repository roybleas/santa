<div class="container">
  <%= form_tag import_path, multipart: true do %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Import file of Secret Santa participants</h4>
      </div>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="form-group">
            <div class="col-sm-2">
              <%= label_tag('currentyear', 'Year:') %>
              <%= number_field_tag 'currentyear', @this_year , min: @this_year , class: 'form-control' %>
            </div>
            <div class="col-sm-10"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-6">
              <%= file_field_tag :file %>
            </div>
            <div class="col-sm-6"></div>
          </div>
          <div class="form-group" >
            <div class="col-sm-12">
              <%= submit_tag "Import" , class: 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
