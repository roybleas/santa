<div class="container">
  <div class="well"><h4>
    Secret Santa participants
    </h4>
  </div>
  <% if @people.size > 0 %>
    <% set_path = set_path(@current_year) %>
    <% @people.each do |person| %>
      <div class="row">
        <div class="col-sm-2" >
          <%= link_to person.name, person_path(person.id) %>
        </div>
        <div class="col-sm-10">
          <ul class= "list-inline">
            <% person.people_secretsantas.each do |s| %>
              <li> <%= link_to s.year, set_path.for_year(s.year) %> </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="panel panel-info">
      <div class="panel-heading">No participants found</div>
    </div>
  <% end %>
</div>
